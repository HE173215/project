# Node Environment
NODE_ENV=development
# For production (ngrok/deployment): NODE_ENV=production

# Server Configuration
PORT=5000

# MongoDB Configuration
# Local: mongodb://localhost:27017/your_database_name
# Atlas (Production): mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGO_URI=mongodb://localhost:27017/your_database_name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_use_strong_random_string
JWT_EXPIRE=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
# For ngrok: https://your-ngrok-url.ngrok-free.app/api/auth/google/callback

# Frontend URL
CLIENT_URL=http://localhost:3000
# For ngrok: https://your-ngrok-url.ngrok-free.app

# Security - CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# For ngrok: https://your-ngrok-url.ngrok-free.app

# AI APIs Configuration (Choose one or more)
# OpenAI GPT-4 (Recommended)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini (Alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude (Alternative)
CLAUDE_API_KEY=your_claude_api_key_here

# AI Features
# Set to true to enable AI auto-assignment
AI_ENABLED=true
